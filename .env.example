# Environment Variables Template
# Egyptian Price Comparison App - Waffar Shokran

# Application Environment
ENVIRONMENT=development
TZ=Africa/Cairo
LOG_LEVEL=INFO

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true

# Firecrawl API (Primary scraping service)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev

# Backup Scraping Configuration
ENABLE_PLAYWRIGHT_FALLBACK=true
ENABLE_SELENIUM_FALLBACK=true
SCRAPING_TIMEOUT=30
MAX_CONCURRENT_SCRAPERS=10

# Egyptian Retailers Configuration
ENABLE_ALL_RETAILERS=true
RETAILER_TIMEOUT=15
MAX_RETRIES_PER_RETAILER=3

# Search Configuration
DEFAULT_MAX_RESULTS=50
SEARCH_TIMEOUT=30
ENABLE_ALTERNATIVES=true
ENABLE_PRICE_NORMALIZATION=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_APP_NAME="وفر شكراً - Waffar Shokran"
VITE_DEFAULT_LANGUAGE=ar
VITE_ENABLE_ANALYTICS=false

# Database Configuration (Optional for future use)
DATABASE_URL=postgresql://user:password@localhost:5432/waffar_shokran
ENABLE_DATABASE_LOGGING=false

# Monitoring and Analytics (Optional)
ENABLE_SENTRY=false
SENTRY_DSN=your_sentry_dsn_here
ENABLE_MONITORING=false
MONITORING_PORT=9090

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@waffarshokran.com

# Security
SECRET_KEY=your_super_secret_key_change_this_in_production
ALLOWED_HOSTS=localhost,127.0.0.1,waffarshokran.com
CORS_ORIGINS=http://localhost:3000,https://waffarshokran.com

# Egyptian Market Specific
DEFAULT_CURRENCY=EGP
CURRENCY_DISPLAY_FORMAT=arabic
ENABLE_ARABIC_NUMERALS=true
CAIRO_TIMEZONE=Africa/Cairo

# Performance Tuning
WORKER_PROCESSES=4
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30
KEEPALIVE_TIMEOUT=65

# Caching
ENABLE_REDIS_CACHE=true
CACHE_TTL_SECONDS=300
ENABLE_RESPONSE_COMPRESSION=true

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_HOT_RELOAD=true
ENABLE_API_DOCS=true